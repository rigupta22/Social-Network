<div id = "user-comment-<%= comment.id %>" class = 'well' >
  <%= form_with(model: comment, url: post_comment_path(post, comment), local: true, id: 'update-comment', data: {comment_id: comment.id}) do |form| %>
    <p class = 'edit-field'>
      <%= form.label :Comment %><br>
      <%= form.text_area :body, id: "comment_text_#{comment.id}" %><br>
      <%= form.submit class: 'submit-form' %>
      <%= link_to "Cancel",'javascript:;', class: 'cancel-edit', data: { comment_id: comment.id }  %>
    </p>
    <div class = 'show-field comment' >
      <%= render partial: 'users/image', locals: { user: comment.user, size: '20x20'}%>
      <div class = 'comment-body'>
        <strong><%= comment.user.username %> :</strong>
        <%= comment.body %>
      </div>
      <% if comment.user == current_user %>
        <div class="dropdown">
          <button class="btn btn-xs dropdown-toggle" type="button" data-toggle="dropdown">
          <span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li><%= link_to 'Delete', post_comment_path(post, comment), class: 'delete-comment  fa fa-trash-o', data: { comment_id: comment.id } %></li>
              <li> <%= link_to 'Edit', 'javascript:;', class: 'edit-comment  fa fa-pencil', data: { comment_id: comment.id } %></li>
            </ul>
        </div>
      <% end %>
    </div>
  <% end %>
  <%= render partial: 'comment_likes/like', locals: { post: post, comment: comment } %>
</div>
