<%= form_with(scope: :comment, url: post_comments_path(post), local: true, id: 'create-comment',data: {post_id: post.id}) do |form| %>
<p>
  <%= form.label :Comment %><br>
  <%= form.text_area :body, id: "comment-#{post.id}" %>
</p>

<p>
  <%= form.submit 'Comment', class: "btn create-form" %>
</p>
<% end %>
