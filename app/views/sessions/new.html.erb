<%= form_with model: @user, scope: :session, url: login_path, local: :true do |form| %>

  <p>
    <%= form.label :Email %><br>
    <%= form.email_field :email%>
  </p>

  <p>
    <%= form.label :Password %><br>
    <%= form.password_field :password %>
  </p>

  <p>
    <%= form.submit "Log In", class: "btn btn-info" %>
  </p>
<% end %>
